{
    "source": ["dist/*.tokens.json"],
    "platforms": {
      "css": {
        "transformGroup": "css",
        "buildPath": "dist/css/",
        "transforms": ["betterKebab"],
        "files": [{
          "destination": "_variables.css",
          "format": "css/variables",
          "options" : {
            "showFileHeader": false,
            "outputReferences": true
          }
        }]
      },
      "json-flat": {
        "transformGroup": "js",
        "buildPath": "dist/json/",
        "files": [
          {
            "destination": "styles.json",
            "format": "json/flat"
          }
        ]
      }
    }
  }